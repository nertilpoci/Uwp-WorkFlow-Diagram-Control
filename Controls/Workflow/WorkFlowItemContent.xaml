<UserControl
    x:Class="WorkFlow.Controls.Workflow.WorkFlowItemContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkFlow.Controls.Workflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"   xmlns:winControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    d:DesignHeight="100"
    d:DesignWidth="200">
    <winControls:DropShadowPanel Color="Black"
                          OffsetX="-10"
                          OffsetY="-10"
                          BlurRadius="30"
                          ShadowOpacity=".5"
                          
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch">
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" FontSize="15" Foreground="White" />
                <TextBlock  Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" FontSize="10"
                               Foreground="#FF777777"
                               TextWrapping="Wrap" TextAlignment="Center" />
            </StackPanel>
        </Grid>

    </winControls:DropShadowPanel>
</UserControl>
