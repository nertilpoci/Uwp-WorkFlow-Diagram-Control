<UserControl
    x:Class="WorkFlow.WorkFlowItems.Controls.ConnectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkFlow.Controls.Workflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:winControls="using:Microsoft.Toolkit.Uwp.UI.Controls"

    mc:Ignorable="d"
    d:DesignHeight="20"
    d:DesignWidth="20">
    <winControls:DropShadowPanel BlurRadius="10.0"
                          ShadowOpacity="0.70"
                         
                          Color="Black"
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch">
        <Ellipse AllowDrop="True" x:Name="anchor" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#005b96" 
                />
    </winControls:DropShadowPanel>
   
</UserControl>
